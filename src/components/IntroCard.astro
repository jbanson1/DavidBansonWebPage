---
import Card from "./Card/index.astro";
import Button from "./Button.astro";
import { LINKS } from "../lib/constants";
import { Icon } from "astro-icon/components";
import Tooltip from "./Tooltip/index";
import { Image } from "astro:assets";
import ThemeToggle from "./ThemeToggle.astro";
---

<Card colSpan="md:col-span-3" rowSpan="md:row-span-4">
  <div class="flex w-full h-full">
    <div class="flex flex-col justify-between md:max-h-[300px] gap-4">
      <div class="flex flex-col h-full">
        <h6 class="text-sm font-light m-0 text-muted">welcome</h6>
        <p class="m-0 font-light text-xl">
          <span
            class="typewriter-block"
            data-typewriter
            data-type-speed="35"
          >
            Hi, I'm <span class="font-bold">David Banson</span>, an aspiring cybersecurity and GRC professional drawing on my background in international affairs to bridge policy and technology.
          </span>
        </p>
      </div>

      <!-- Buttons Section -->
      <div class="flex gap-4 flex-wrap">

        <!-- Theme Toggle Button -->
        <ThemeToggle />

        <!-- Resume Button -->
        <a aria-label="resume" href="/resume.pdf" target="_blank" rel="noopener noreferrer">
          <Button aria-label="resume" class="transition-colors duration-200">
            <Icon
              class="h-6 theme-icon hover:text-red-500 transition-colors duration-200"
              name="ri:file-text-line"
            />
            <span class="sr-only">Resume</span>
          </Button>
        </a>

        <!-- GitHub Button -->
        <a aria-label="github profile" href={LINKS.github} target="_blank" rel="noopener noreferrer">
          <Button aria-label="github profile" class="transition-colors duration-200">
            <Icon
              class="h-6 theme-icon hover:text-red-500 transition-colors duration-200"
              name="ri:github-fill"
            />
            <span class="sr-only">GitHub Profile</span>
          </Button>
        </a>

        <!-- LinkedIn Button -->
        <a aria-label="linkedin profile" href={LINKS.linkedin} target="_blank" rel="noopener noreferrer">
          <Button aria-label="linkedin profile" class="transition-colors duration-200">
            <Icon
              class="h-6 theme-icon hover:text-red-500 transition-colors duration-200"
              name="ri:linkedin-box-fill"
            />
            <span class="sr-only">LinkedIn Profile</span>
          </Button>
        </a>

        <!-- Easter Egg Button -->
        <Tooltip client:visible>
          <Button aria-label="easter egg btn" class="transition-colors duration-200">
            <Icon
              class="h-6 theme-icon hover:text-red-500 transition-colors duration-200"
              name="ri:emotion-laugh-line"
            />
            <span class="sr-only">Easter egg button</span>
          </Button>
        </Tooltip>

      </div>
    </div>

    <!-- Image Section (Larger Version) -->
    <Image
      alt="memoji of David"
      class="w-auto max-h-[380px] lg:max-h-[420px] select-none absolute right-[-110px] bottom-[-20px] z-[-1] opacity-50 md:opacity-100 md:relative md:right-auto md:bottom-auto md:z-auto pointer-events-none"
      height="420"
      src="/me.webp"
      width="420"
    />
  </div>
</Card>
