---
import Button from "./Button.astro";
import { Icon } from "astro-icon/components";
---

<Button
  id="theme-toggle"
  aria-label="Toggle color theme"
  type="button"
  class="transition-colors duration-200"
  data-theme-toggle
>
  <Icon
    class="h-6 theme-icon icon-on transition-colors duration-200 hover:text-red-500"
    name="ri:lightbulb-flash-line"
  />
  <Icon
    class="h-6 theme-icon icon-off transition-colors duration-200 hover:text-red-500"
    name="ri:lightbulb-line"
  />
</Button>
